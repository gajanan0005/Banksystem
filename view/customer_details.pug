extends base.pug

block scripts
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    //- script(type='module').
block style 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    style 
        include ../static/style_base.css
        include ../static/style_customerDetails.css
        

block content 
    div.container 
        h1 Customer Account Details
        table 
            tr
                th Name
                th Account No
                th Email
                th Current Balance

            tr                 
                td #{user.name}
                td #{user.accountNo}
                td #{user.email}
                td #{user.balance}   
        table
        <div class="form-container">
            <form action="/history" method="get"> 
                <button value = #{user.id}  type = "submit" class='btns' name = "view" }>View Transactions</button>

            </form>
            //- <form action="/addFunds" method="POST"> 
            //-      <button value = #{user.id}  type = "submit" class='btns' name = "add" }>Add funds</button>
            //- </form> 
            //- Button trigger modal 
            
            <button  name="add" type="submit" class="btns" data-bs-toggle="modal" data-bs-target="#exampleModal">Add funds</button>
            
            <!-- Modal -->
            <form action="/addFunds" method="post">
                <div class="modal" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add funds to the Account</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h6>Enter Amount:</h6>
                                <input type="Number" name="funds" id="funds">
                            </div>
                            <!-- <div class="newbuttons">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> 
                                <button type="submit" value=#{user.id} class="btn btn-primary" name="add" id="add">Add</button>
                            </div> -->
                            <!-- <div class="modal-footer">

                            </div> -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button> 
                                <button type="submit" value=#{user.id} class="btn btn-primary" name="add" id="add">Add Funds</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            
            <!-- <form action="/withdrawFunds" method="POST"> 
                <button value = #{user.id}  type = "submit" class='btns' name = "withdraw" }>Withdraw funds</button>
            </form> -->

            <button  name="withdraw" type="submit" class="btns" data-bs-toggle="modal" data-bs-target="#withdrawModal">Withdraw funds</button>
            
            <!-- Modal -->
            <form action="/withdrawFunds" method="post">
                <div class="modal" id="withdrawModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="withdrawModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="withdrawModalLabel">Withdraw Funds</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h6>Enter Amount:</h6>
                                <input type="Number" name="withdraw" id="withdraw">
                            </div>                       
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button> 
                                <button type="submit" value=#{user.id} class="btn btn-primary" name="transfer" id="transfer">Withdraw Funds</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>


            <form action="/transferFunds" method="POST"> 
                <button value = #{user.id}  type = "submit" class='btns' name = "transfer" }>Transfer funds</button>
            </form>
        
            </form>
        </div>